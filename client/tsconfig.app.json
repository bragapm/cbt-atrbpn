{
  "compilerOptions": {
    "noEmit": true, // Prevents emitting .js files during dev
    "isolatedModules": true, // Required for React with Vite
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vite/client"]
  },

  "include": ["src"]
}
